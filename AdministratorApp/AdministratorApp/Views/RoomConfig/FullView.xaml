<UserControl x:Class="AdministratorApp.Views.RoomConfig.FullView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdministratorApp.Views.RoomConfig"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="RoomCanvas">
            <!-- Draw room items here -->
        </Canvas>
        <TextBox Width="200" Padding="5" Margin="5" Tag="Testing" Style="{StaticResource CustomTextBox}" Height="55"/>
        <Button Grid.Row="1" Content="Testing" Style="{StaticResource CustomButton}"></Button>

        <!-- Zoom Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Content="-"/>
            <Button Content="+"/>
        </StackPanel>

        <!-- Legend -->
        <ListBox x:Name="LegendListBox" VerticalAlignment="Top" HorizontalAlignment="Right">
            <!-- Bind to legend data here -->
        </ListBox>

        <!-- Edit Button -->
        <Button Content="Modifier" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
